{
  "name": "mazee",
  "private": true,
  "packageManager": "yarn@4.10.3",
  "workspaces": [
    "apps/*",
    "packages/*",
    "services/*"
  ],
  "devDependencies": {
    "@redocly/cli": "latest"
  },
  "scripts": {
    "build": "yarn workspaces foreach -A -v run build",
    "lint": "yarn workspaces foreach -A -v run lint",
    "typecheck": "yarn workspaces foreach -A -v run typecheck",
    "format": "yarn workspaces foreach -A -v run format",
    "openapi:bundle": "redocly bundle packages/openapi/openapi.yaml -o packages/openapi/dist/openapi.bundled.yaml",
    "openapi:preview": "redocly preview-docs packages/openapi/openapi.yaml"
  }
}
